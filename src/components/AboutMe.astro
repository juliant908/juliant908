---
const personalImageAlt = "Juli√°n Tibana";

import {getLangFromUrl, Translate} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translate = new Translate(lang);
const translations = translate.get("about");
---

<article
  class="flex flex-col items-center justify-center gap-8 text-gray-50 dark:text-gray-200 md:flex-row"
>
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-yellow-200 dark:[&>p>strong]:text-blue-400 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
  >
    <p>
      {translations?.subtitle1}<strong>{translations?.subtitle2}</strong>
    </p>

    <p>
      {translations?.achievements}<strong>{translations?.achievements1}</strong>{
        translations?.achievements2
      }
    </p>

    <p>
      {translations?.achievements3}
      <strong
        >{translations?.achievements4}<em class="italic"
          >{translations?.achievements5}</em
        >{translations?.achievements6}</strong
      >{translations?.achievements7}
    </p>
  </div>

  <img
    width="200"
    height="200"
    src="/me.jpeg"
    alt={personalImageAlt}
    class="order-1 object-cover w-64 h-full p-1 md:order-2 rotate-3 lg:p-2 lg:w-64 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
    style="object-position: 50% 50%"
  />
</article>
